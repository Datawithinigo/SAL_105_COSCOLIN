<style>
  footer {
    background-color: var(--primary);
    color: white;
    padding: 4rem 0 2rem;
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }
  
  .footer-logo h2 {
    font-size: 1.8rem;
    margin: 0;
  }
  
  .footer-logo p {
    font-size: 0.9rem;
    margin: 0;
  }
  
  .footer-desc {
    margin-top: 1rem;
    line-height: 1.6;
  }
  
  .footer-links h3,
  .footer-contact h3,
  .footer-hours h3 {
    font-size: 1.3rem;
    margin-bottom: 1rem;
    position: relative;
  }
  
  .footer-links h3::after,
  .footer-contact h3::after,
  .footer-hours h3::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 50px;
    height: 2px;
    background-color: var(--accent);
  }
  
  .footer-links ul,
  .footer-hours ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-links li,
  .footer-hours li {
    margin-bottom: 0.5rem;
  }
  
  .footer-links a {
    transition: color 0.3s ease;
  }
  
  .footer-links a:hover {
    color: var(--accent);
  }
  
  address {
    font-style: normal;
    line-height: 1.6;
  }
  
  address p {
    margin: 0.5rem 0;
  }
  
  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .social-links {
    display: flex;
    gap: 1rem;
  }
  
  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
    transition: background-color 0.3s ease;
  }
  
  .social-links a:hover {
    background-color: var(--accent);
  }
  
  @media (max-width: 768px) {
    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>